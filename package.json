{
  "name": "tao-blog-theme",
  "description": "A simple blog theme.",
  "version": "0.1.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg",
    "mobile": "assets/screenshot-mobile.jpg"
  },
  "scripts": {
    "test": "gscan --fatal --verbose .",
    "format": "prettier --check '**/*.{hbs,css,scss,json}'"
  },
  "author": {
    "name": "sugtao4423"
  },
  "devDependencies": {
    "gscan": "^4.36.2",
    "prettier": "^2.8.8"
  },
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": true
  }
}
