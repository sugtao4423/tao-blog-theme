{
  "name": "tao-blog-theme",
  "description": "A simple blog theme.",
  "version": "0.1.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg",
    "mobile": "assets/screenshot-mobile.jpg"
  },
  "watch": {
    "build:sass": {
      "patterns": [
        "assets/sass"
      ],
      "extensions": "sass,scss",
      "quiet": false
    },
    "build:js": {
      "patterns": [
        "assets/js/lib"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "scripts": {
    "dev": "npm-watch",
    "build:sass": "./shell/cssbuilder.sh 2>&1",
    "build:js": "./shell/jsbuilder.sh 2>&1",
    "test": "gscan --fatal --verbose .",
    "format": "prettier --check '**/*.{hbs,css,scss,json}'",
    "zip": "./shell/zipper.sh"
  },
  "author": {
    "name": "sugtao4423",
    "email": "author@example.com"
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "bootstrap": "5.3.5",
    "gscan": "^5.2.1",
    "npm-watch": "^0.13.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-combine-media-query": "^2.1.0",
    "prettier": "^3.7.3",
    "sass": "^1.94.2",
    "uglify-js": "^3.19.3"
  },
  "browserslist": [
    "> 2%",
    "ios >= 15",
    "last 3 versions",
    "not dead"
  ],
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": {
      "exclude": [
        "bookmark"
      ]
    }
  }
}
