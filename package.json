{
  "name": "tao-blog-theme",
  "description": "A simple blog theme.",
  "version": "0.1.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg",
    "mobile": "assets/screenshot-mobile.jpg"
  },
  "scripts": {
    "dev": "./shell/cssbuilder.sh --watch 2>&1",
    "build:sass": "./shell/cssbuilder.sh 2>&1",
    "test": "gscan --fatal --verbose .",
    "format": "prettier --check '**/*.{hbs,css,scss,json}'",
    "zip": "./shell/zipper.sh"
  },
  "author": {
    "name": "sugtao4423",
    "email": "author@example.com"
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "gscan": "^4.36.2",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-combine-media-query": "^1.0.1",
    "prettier": "^2.8.8",
    "sass": "^1.62.1"
  },
  "browserslist": [
    "> 2%",
    "ios >= 15",
    "last 3 versions",
    "not dead"
  ],
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": true
  }
}
