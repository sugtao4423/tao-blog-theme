<article class="post-card">
  <header>
    <h2 class="title">
      <a href="{{url}}">{{title}}</a>
    </h2>
    <div class="info">
      <div class="date">{{date format="YYYY/MM/DD"}}</div>
      {{#if tags}}
      <div class="tags">
        {{#foreach tags}}
        <a href="{{url}}">{{name}}</a>
        {{/foreach}}
      </div>
      {{/if}}
    </div>
  </header>
  <div class="body">
    <div class="thumbnail">
      <a href="{{url}}">
        {{#if feature_image}}
        <img
          src="{{img_url feature_image size="s"}}"
          alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
          loading="lazy"
        />
        {{else}}
        <img
          src="{{asset 'images/noimage.png'}}"
          alt="{{title}}"
          loading="lazy"
        />
        {{/if}}
      </a>
    </div>
    <div class="excerpt">
      <a href="{{url}}">
        {{excerpt characters="140"}}
      </a>
    </div>
  </div>
</article>